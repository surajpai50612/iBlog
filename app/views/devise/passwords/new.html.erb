<style>
  .container{
    padding-top:20px;
  }
</style>

<div class="container">
  <h2 style="padding-bottom:15px;">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group" style="padding-bottom:15px;">
      <b><%= f.label :email, style: "padding-bottom:5px;" %></b><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
    </div>

    <div class="actions" style="padding-bottom:15px;">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-danger' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>