<style>
  .container{
    padding-top:20px;
  }
</style>

<div class="container">
  <h2 style="padding-bottom:15px;">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group" style="padding-bottom:15px;">
      <b><%= f.label :email, style: "padding-bottom:5px;"  %></b><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :required => true %>
    </div>

    <div class="form-group" style="padding-bottom:15px;">
      <b><%= f.label :password, style: "padding-bottom:5px;"  %></b><br />
      <%= f.password_field :password, autocomplete: "current-password", :required => true %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-secondary', style: "width:100px;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>